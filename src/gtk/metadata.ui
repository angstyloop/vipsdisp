<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Metadata" parent="GtkWidget">
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <property name="halign">GTK_ALIGN_FILL</property>
        <property name="valign">GTK_ALIGN_FILL</property>
    <child>
      <object class="GtkSearchBar" id="search_bar">
        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="hexpand">true</property>
            <property name="halign">GTK_ALIGN_FILL</property>
            <property name="vexpand">true</property>
            <property name="valign">GTK_ALIGN_FILL</property>
            <child>
              <object class="GtkHeaderBar">
                <property name="decoration-layout">:title</property>
                <property name="title-widget">
                  <object class="GtkSearchEntry" id="search_entry">
                    <property name="hexpand">true</property>
                    <property name="placeholder-text"> Filter properties</property>
                  </object>
                </property>
              </object>
            </child>
    
            <child>
              <object class="GtkInfoBar" id="error_bar">
                <property name="message-type">error</property>
                <property name="show-close-button">true</property>
                <property name="revealed">false</property>
                <child>
                  <object class="GtkLabel" id="error_label">
                    <attributes>
                      <attribute name="weight" value="bold"/>
                    </attributes>
                  </object>
                </child>
              </object>
            </child>
    
            <child>
              <object class="GtkBox" id="search_warning">
                <property name="visible">false</property>
                <property name="margin-top">8</property>
                <property name="margin-bottom">16</property>
		<child>
                  <object class="GtkLabel">
                    <property name="label">No exact match</property>
                  </object>
                </child>
              </object>
	    </child>

            <child>
	      <object class="GtkScrolledWindow" id="scrolled_window">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="halign">GTK_ALIGN_FILL</property>
                <property name="valign">GTK_ALIGN_FILL</property>
	      </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
